{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": [
    "plugin:react/recommended",
    "airbnb"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "react/no-unstable-nested-components": "off",
    "react/function-component-definition": "off",
    "react/jsx-filename-extension": "off",
    "react/prop-types": "off",
    "no-use-before-define": "off",
    "global-require": "off",
    "arrow-parens": "off",
    "consistent-return": "off",
    "no-console": "off",
    "no-underscore-dangle": "off"
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".ts", ".tsx", ".native.js", ".plugin.js"]
      }
    }
  }
}
