{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "react/no-unstable-nested-components": "off",
        "react/function-component-definition": "off",
        "react/jsx-filename-extension": "off",
        "no-use-before-define": "off"
    },
    "settings": {
        "import/resolver": {
            "node": {
                "extensions": [".js",".ts", ".tsx", ".native.js", ".plugin.js"]
            }
        }
    }
}
